{% extends 'base.html.twig' %}

{% block body %}

    <div class="content">

        <div id='calendar'></div>

    </div>
    <script>

      document.addEventListener('DOMContentLoaded', function() {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
            themeSystem: 'standart'
        });
        calendar.render();
      });

    </script>

{% endblock %}