                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12">
                    {{ form_row(form.date, {'id':'datepicker'},{'attr': {'class':'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12">
                    {{ form_row(form.Send, {'attr': {'class':'pull-right btn btn-lg sr-button'}}) }}
                </div>
            </div>
        {{ form_end(form) }}
        
